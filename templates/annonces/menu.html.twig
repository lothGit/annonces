<h5><a href="{{path('annonce.add')}}"
                  style="color:white;text-decoration:none">Ajouter un annonce</a></h5>
<h5 style="background-color:white">Annonces récentes</h5>
   <table class="table table-striped table-dark">
      <tbody>
        {%for annonce in annonces %}
          <tr>
              <td>
                <h4><a href="{{path('annonce.details', {'id' : annonce.id})}}"
                  style="color:white;text-decoration:none">{{annonce.titre}}</a></h4>
              </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>  
	<h5 style="background-color:white">Catégories</h5>
	<table class="table table-striped table-dark">
      <tbody>
        {%for categorie in categories %}
          <tr>
              <td>
               <h4><a href="{{ path('annonce.categorie',{'id':categorie.id})}}"
			   style="color:white;text-decoration:none">{{categorie.nom}}</a></h4>
              </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>  

   
