{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container" style="height:800px;margin-top:10px;">
  <div class="row">
  {#%if annonces|length>1%#}
    <div class="col-4" style="background-color: #b1b1e7;height:800px;padding-top:20px;border:2px solid black;
    border-radius: 5px">
      <table class="table table-striped table-dark">
        <tbody>
          {%for annonce in annonces %}
            <tr>
                <td>
                  <h4><a href="{{path('annonce.details', {'id' : annonce.id})}}"
                  style="color:white;text-decoration:none">{{annonce.titre}}</a></h4>
                </td>
            </tr>
            {% endfor %}
        </tbody>
      </table>   
    </div>
   {#% endif %#}
  {% if annonce is defined %}
    <div class="col-8" style="background-color:#ebebf9;height:800px;padding-top:20px;border:2px solid black;
    border-radius: 5px">
      {%for annonce in annonce %}
          <h4 style="width:100%;text-align:center;background-color:#33CAFF">{{annonce.titre}}</h4>
          <p><b>Description du poste: </b>{{annonce.description}}</p>
          <p><b>Date de publication:</b> {{annonce.publishAt}}</p>
          <p><b>Lieu:</b> {{annonce.lieu}}</p>
          <p><b>Rémunération:</b> {{annonce.remuneration}}</p>
        {% endfor %} 
    </div>
  {% endif %}
 
  </div>
</div>


{% endblock %}
