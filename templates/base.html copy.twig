											<a class="nav-link" href="{{path('user.profil',{id:app.user.id})}}">Profil</a>
										</li>
									{% endif %}
								</ul>
								{% if app.user  %}
									<ul class="navbar-nav navbar-right">
										<li class="nav-item">
											<div class="mb-3 navbar-brand">
												{{ app.user.userIdentifier }},
											</div>
										</li>
										<li class="nav-item">
											<a class="nav-link active" href="{{ path('app_logout') }}">Se déconnecter</a>
										</li>
									</ul>
