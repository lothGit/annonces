									<a class="navbar-brand" href="{{path('app_login')}}">Se connecter</a>
								{% endif %}
								<form class="d-flex" action="/annonce/search" metod="post">
									<input class="form-control me-sm-2" type="date" name="date" placeholder="Search">
									<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
								</form>
							</div>
						</div>
					</nav>
				</header>
			{% endblock %}
			<div class="container">
				{% block body %}
					{% block sidebar %}
						{{include('annonces/partials/menu.html.twig')}}
					{% endblock %}
					{% block main %}{% endblock %}
				{% endblock %}
			</div>
			{% block footer %}
				<footer>
					<div class="container">
						<div class="row">
							<div class="col-4">
